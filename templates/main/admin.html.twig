{% extends 'main/base.html.twig' %}
{% block head %}
    {% block title %} {{ title }} {% endblock %}

{% endblock %}

{% block body %}
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Review</th>
                <th scope="col">FIO</th>
                <th scope="col">Address</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ user.username ? user.username : '-' }}</td>
                    <td><p style="width:450px; overflow-wrap: anywhere;">{{user.review ? user.review : '-' }}</p></td>
                    <td>{{user.fio ? user.fio : '-' }}</td>
                    <td>{% if user.address %}
                            lan: {{ user.address|split(',')[0] }} <br>
                            lat: {{ user.address|split(',')[1] }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
